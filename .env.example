# Auth Service
AUTH_DB_USER=auth_user
AUTH_DB_PASSWORD=auth_password
AUTH_DB_NAME=auth_db
AUTH_REDIS_ADDR=auth-redis:6379
AUTH_REDIS_PASSWORD=
AUTH_REDIS_DB=0
AUTH_PORT=8081
REQUEST_TIMEOUT=30s

# Market Service
MARKET_DB_USER=market_user
MARKET_DB_PASSWORD=market_password
MARKET_DB_NAME=market_db
MARKET_PORT=8080
MARKET_REDIS_ADDR=auth-redis:6379
MARKET_REDIS_PASSWORD=
MARKET_REDIS_DB=1
LOG_LEVEL=info
ENV=development

# CORS Configuration (comma-separated list of allowed origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# External Ports (host machine)
AUTH_EXTERNAL_PORT=8081
MARKET_EXTERNAL_PORT=8080
AUTH_POSTGRES_PORT=5433
MARKET_POSTGRES_PORT=5434
AUTH_REDIS_PORT=6380

# JWT Configuration (shared between services)
JWT_ACCESS_SECRET=dev-super-secret-jwt-access-key-change-in-production
JWT_REFRESH_SECRET=dev-super-secret-jwt-refresh-key-change-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=168h
