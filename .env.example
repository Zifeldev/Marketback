# Example environment variables for local run without Docker Compose
# Copy to .env and adjust values as needed

# General
ENV=development
LOG_LEVEL=debug

# ==== Auth Service ====
# HTTP
AUTH_HTTP_HOST=:8081
# DB
AUTH_DB_HOST=localhost
AUTH_DB_PORT=5433
AUTH_DB_USER=auth_user
AUTH_DB_PASSWORD=auth_password
AUTH_DB_NAME=auth_db
# Redis
AUTH_REDIS_ADDR=localhost:6380
# JWT
JWT_ACCESS_SECRET=change-this-access-secret
JWT_REFRESH_SECRET=change-this-refresh-secret
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=168h
JWT_ISSUER=marketback-auth
# First Admin (optional)
FIRST_ADMIN_EMAIL=admin@example.com

# ==== Market Service ====
# HTTP
MARKET_HTTP_HOST=:8080
# DB
MARKET_DB_HOST=localhost
MARKET_DB_PORT=5434
MARKET_DB_USER=market_user
MARKET_DB_PASSWORD=market_password
MARKET_DB_NAME=market_db
# Redis
MARKET_REDIS_ADDR=localhost:6381
# JWT (must match Auth JWT_ACCESS_SECRET)
MARKET_JWT_ACCESS_SECRET=change-this-access-secret
