# Development Environment Variables
# This file contains all environment variables for local development

#############################################
# Auth Service Configuration
#############################################

# Server Configuration
AUTH_SERVER_HOST=0.0.0.0:8081
AUTH_SHUTDOWN_TIMEOUT=30s
AUTH_REQUEST_TIMEOUT=30s

# Database Configuration
AUTH_DB_HOST=localhost
AUTH_DB_PORT=5433
AUTH_DB_USER=auth_user
AUTH_DB_PASSWORD=auth_password
AUTH_DB_NAME=auth_db
AUTH_DB_SSL_MODE=disable

# Database Connection Pool
AUTH_DB_MAX_CONNS=25
AUTH_DB_MIN_CONNS=5
AUTH_DB_MAX_CONN_LIFETIME=1h
AUTH_DB_MAX_CONN_IDLE_TIME=30m
AUTH_DB_HEALTH_CHECK_PERIOD=1m
AUTH_DB_QUERY_TIMEOUT=30s

# JWT Configuration
JWT_ACCESS_SECRET=dev-super-secret-jwt-access-key-for-development-only
JWT_REFRESH_SECRET=dev-super-secret-jwt-refresh-key-for-development-only
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=168h
JWT_ISSUER=marketback-auth
FIRST_ADMIN_EMAIL=admin@localhost

# Redis Configuration
AUTH_REDIS_ENABLED=true
AUTH_REDIS_ADDR=localhost:6379
AUTH_REDIS_PASSWORD=
AUTH_REDIS_DB=0
AUTH_REDIS_PREFIX=auth:
AUTH_REDIS_TTL=15m

# Rate Limiting
AUTH_RATE_LIMIT_ENABLED=true
AUTH_RATE_LIMIT_INTERVAL=1m
AUTH_RATE_LIMIT_MAX=100

# Logging
AUTH_LOG_LEVEL=debug

#############################################
# Market Service Configuration
#############################################

# Server Configuration
MARKET_SERVER_HOST=0.0.0.0:8080
MARKET_SHUTDOWN_TIMEOUT=30s
MARKET_REQUEST_TIMEOUT=30s

# Database Configuration
MARKET_DB_HOST=localhost
MARKET_DB_PORT=5434
MARKET_DB_USER=market_user
MARKET_DB_PASSWORD=market_password
MARKET_DB_NAME=market_db
MARKET_DB_SSL_MODE=disable

# Database Connection Pool
MARKET_DB_MAX_CONNS=25
MARKET_DB_MIN_CONNS=5
MARKET_DB_MAX_CONN_LIFETIME=1h
MARKET_DB_MAX_CONN_IDLE_TIME=30m
MARKET_DB_HEALTH_CHECK_PERIOD=1m
MARKET_DB_QUERY_TIMEOUT=30s

# JWT Configuration (must match Auth service)
MARKET_JWT_ACCESS_SECRET=dev-super-secret-jwt-access-key-for-development-only

# Redis Configuration
MARKET_REDIS_ADDR=localhost:6380
MARKET_REDIS_PASSWORD=
MARKET_REDIS_DB=0

# Logging
MARKET_LOG_LEVEL=debug
