# Market Service Environment Variables
# Copy this file to .env and adjust values for your environment

# Server Configuration
SERVER_HOST=0.0.0.0:8080
SHUTDOWN_TIMEOUT=30s
REQUEST_TIMEOUT=30s

# Database Configuration
DB_HOST=localhost
DB_PORT=5434
DB_USER=market_user
DB_PASSWORD=market_password
DB_NAME=market_db
DB_SSL_MODE=disable

# Database Connection Pool
DB_MAX_CONNS=25
DB_MIN_CONNS=5
DB_MAX_CONN_LIFETIME=1h
DB_MAX_CONN_IDLE_TIME=30m
DB_HEALTH_CHECK_PERIOD=1m
DB_QUERY_TIMEOUT=30s

# JWT Configuration (should match Auth service)
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-change-this-in-production

# Redis Configuration
REDIS_ADDR=localhost:6380
REDIS_PASSWORD=
REDIS_DB=0

# Logging
LOG_LEVEL=info
