# Production Environment Variables Template
# !!! NEVER commit this file with real production secrets !!!
# Copy to .env.prod and fill with actual production values

#############################################
# Auth Service Configuration
#############################################

# Server Configuration
AUTH_SERVER_HOST=0.0.0.0:8081
AUTH_SHUTDOWN_TIMEOUT=60s
AUTH_REQUEST_TIMEOUT=60s

# Database Configuration
AUTH_DB_HOST=auth-db
AUTH_DB_PORT=5432
AUTH_DB_USER=auth_user
AUTH_DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
AUTH_DB_NAME=auth_db
AUTH_DB_SSL_MODE=require

# Database Connection Pool
AUTH_DB_MAX_CONNS=50
AUTH_DB_MIN_CONNS=10
AUTH_DB_MAX_CONN_LIFETIME=2h
AUTH_DB_MAX_CONN_IDLE_TIME=1h
AUTH_DB_HEALTH_CHECK_PERIOD=5m
AUTH_DB_QUERY_TIMEOUT=30s

# JWT Configuration
JWT_ACCESS_SECRET=CHANGE_THIS_GENERATE_STRONG_RANDOM_SECRET_FOR_ACCESS
JWT_REFRESH_SECRET=CHANGE_THIS_GENERATE_STRONG_RANDOM_SECRET_FOR_REFRESH
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=168h
JWT_ISSUER=marketback-auth-production
FIRST_ADMIN_EMAIL=admin@yourdomain.com

# Redis Configuration
AUTH_REDIS_ENABLED=true
AUTH_REDIS_ADDR=auth-redis:6379
AUTH_REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
AUTH_REDIS_DB=0
AUTH_REDIS_PREFIX=auth:
AUTH_REDIS_TTL=15m

# Rate Limiting
AUTH_RATE_LIMIT_ENABLED=true
AUTH_RATE_LIMIT_INTERVAL=1m
AUTH_RATE_LIMIT_MAX=60

# Logging
AUTH_LOG_LEVEL=warn

#############################################
# Market Service Configuration
#############################################

# Server Configuration
MARKET_SERVER_HOST=0.0.0.0:8080
MARKET_SHUTDOWN_TIMEOUT=60s
MARKET_REQUEST_TIMEOUT=60s

# Database Configuration
MARKET_DB_HOST=market-db
MARKET_DB_PORT=5432
MARKET_DB_USER=market_user
MARKET_DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
MARKET_DB_NAME=market_db
MARKET_DB_SSL_MODE=require

# Database Connection Pool
MARKET_DB_MAX_CONNS=50
MARKET_DB_MIN_CONNS=10
MARKET_DB_MAX_CONN_LIFETIME=2h
MARKET_DB_MAX_CONN_IDLE_TIME=1h
MARKET_DB_HEALTH_CHECK_PERIOD=5m
MARKET_DB_QUERY_TIMEOUT=30s

# JWT Configuration (must match Auth service)
MARKET_JWT_ACCESS_SECRET=CHANGE_THIS_GENERATE_STRONG_RANDOM_SECRET_FOR_ACCESS

# Redis Configuration
MARKET_REDIS_ADDR=market-redis:6379
MARKET_REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
MARKET_REDIS_DB=0

# Logging
MARKET_LOG_LEVEL=warn
